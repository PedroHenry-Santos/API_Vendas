{
	"env": {
		"es2021": true,
    "node": true,
    "jest": true
	},
	"extends": [
		"airbnb-base",
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
    "@typescript-eslint",
    "prettier"
	],
	"rules": {
    "prettier/prettier": "error",
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off",
    "import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
			}
		]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
